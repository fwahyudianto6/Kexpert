<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/padding_default">

	<ImageView
			android:id="@+id/custom_list_img_playar_photo"
			android:layout_width="125dp"
			android:layout_height="125dp"
			android:scaleType="fitXY"/>
	<TextView
			android:id="@+id/custom_list_tv_playar_name"
			android:text="@string/custom_list_tv_player_name"
			android:textSize="18sp"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="26dp"
			android:layout_toEndOf="@id/custom_list_img_playar_photo"/>
	<TextView
			android:id="@+id/custom_list_tv_playar_description"
			android:text="@string/custom_list_tv_player_description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/custom_list_tv_playar_name"
			android:layout_marginStart="26dp"
			android:layout_marginTop="10dp"
			android:layout_toRightOf="@id/custom_list_img_playar_photo"
			android:ellipsize="end"
			android:maxLines="3"/>
</RelativeLayout>